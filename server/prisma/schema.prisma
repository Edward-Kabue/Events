datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model EventOrganizer {
  createdAt DateTime @default(now())
  email     String?
  events    String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  payments  String?
  tickets   Int?
  updatedAt DateTime @updatedAt
  username  String?
}