datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model EventOrganizer {
  bankAccount Float?
  createdAt   DateTime @default(now())
  firstname   String?
  id          String   @id @default(cuid())
  lastname    String?
  phoneNumber Int?
  tickets     Ticket[]
  updatedAt   DateTime @updatedAt
}

model Customer {
  createdAt   DateTime @default(now())
  email       String?
  firstname   String?
  id          String   @id @default(cuid())
  lastname    String?
  phoneNumber Int?
  updatedAt   DateTime @updatedAt
}

model Ticket {
  createdAt DateTime        @default(now())
  eventId   EventOrganizer? @relation(fields: [eventIdId], references: [id])
  eventIdId String?
  id        String          @id @default(cuid())
  updatedAt DateTime        @updatedAt
}

model Event {
  createdAt DateTime  @default(now())
  dates     DateTime?
  featured  Boolean?
  id        String    @id @default(cuid())
  price     Float?
  updatedAt DateTime  @updatedAt
}